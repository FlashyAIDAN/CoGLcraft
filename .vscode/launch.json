    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Run",
            "includePath" : [
                "${workspaceFolder}\\includes"
            ],
            "libPath" : [
                "${workspaceFolder}\\libs"
            ],
            "cStandard" : "c11",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}\\build\\debug\\build.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "F:\\Tools\\Compilers\\mingw-w64\\bin\\gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Debug Build"
        },
        {
